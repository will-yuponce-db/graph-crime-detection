# Server Configuration
PORT=3000

# Databricks SQL Warehouse Configuration
DATABRICKS_HOST=e2-demo-field-eng.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/862f1d757f0424f7

# Unity Catalog Configuration
DATABRICKS_CATALOG=pubsec_geo_law
DATABRICKS_SCHEMA=demo

# Authentication (choose one method)

# Option 1: Personal Access Token
DATABRICKS_TOKEN=your-personal-access-token-here

# Option 2: Service Principal OAuth (M2M)
DATABRICKS_CLIENT_ID=your-client-id-here
DATABRICKS_CLIENT_SECRET=your-client-secret-here

# Optional: OAuth scope for service principal access tokens (used for Model Serving calls)
# Default: all-apis
DATABRICKS_OAUTH_SCOPE=all-apis

# ============== Lakebase Postgres ==============
# When running in Databricks Apps with a database resource attached,
# PGHOST, PGPORT, PGDATABASE, PGUSER, PGSSLMODE are auto-injected.
# For local development, set these manually:
PGHOST=ep-xxx.databricks.com
PGPORT=5432
PGDATABASE=investigative_analytics
PGUSER=your-email@databricks.com
PGPASSWORD=your-oauth-token-here
PGSSLMODE=require

# Schema where synced tables are located (matches UC source schema)
POSTGRES_SCHEMA=demo

# ============== Agent / Model Serving ==============
# Databricks Model Serving endpoint name for the UI agent
# If you already have a shared foundation endpoint, you can set it here.
# Common example (your workspace has this): databricks-gpt-5-2
DATABRICKS_AGENT_ENDPOINT=databricks-gpt-5-2

# Optional: limit agent actions returned per step
DATABRICKS_AGENT_MAX_ACTIONS=5




